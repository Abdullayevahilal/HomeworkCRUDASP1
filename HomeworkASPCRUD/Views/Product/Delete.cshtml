@model Product
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<a asp-action="index" class="btn btn-success btn-sm">Back</a>
<div class="container-fluid">
    <div class="row">
        <div class="col-8">
            <span>Title</span>
            <h4 class="mt-3">@Model.Title</h4>
            <span class="mt-3">Price</span>
            <h4 class="mt-3">@Model.Price</h4>
            <span class="mt-3">Category</span>
            <h4 class="mt-3">@Model.Category.Name</h4>

            <p class="text-danger" style="font-size:20px;">Are you sure for delete?</p>
            <form method="post">
                <input type="submit" class="form-control btn btn-danger" value="Delete" style="width:100px !important;" />
            </form>
        </div>

    </div>


</div>